# Vérifier si un utilisateur existe dans l'AD via OpenLDAP
server_host = 127.0.0.1
server_port = 389
version = 3

# Authentification (si nécessaire)
bind = yes
bind_dn = cn=AD_User,ou=Users_Network,dc=epitaf,dc=local
bind_pw = Caca123!

# Recherche des utilisateurs
search_base = ou=Users_Network,dc=epitaf,dc=local
query_filter = (&(objectClass=user)(userPrincipalName=%s))
result_attribute = sAMAccountName
result_format = %s/Maildir/

# Options
scope = sub
leaf_result_attribute = mail
debuglevel = 1