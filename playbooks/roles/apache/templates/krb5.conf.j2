[libdefaults]
    default_realm = {{ kerberos_realm }}
    dns_lookup_realm = true
    dns_lookup_kdc = true
    ticket_lifetime = 24h
    renew_lifetime = 7d
    forwardable = true

[realms]
    {{ kerberos_realm }} = {
        kdc = {{ kerberos_dc }}
        admin_server = {{ kerberos_dc }}
    }

[domain_realm]
    .{{ kerberos_domain }} = {{ kerberos_realm }}
    {{ kerberos_domain }} = {{ kerberos_realm }}
