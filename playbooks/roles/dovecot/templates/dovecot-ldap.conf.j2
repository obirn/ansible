# Configuration LDAP
ldap_version = 3
auth_bind = yes

user_filter = (&(objectClass=user)(sAMAccountName=%u))
pass_filter = (&(objectClass=user)(sAMAccountName=%u))

#user_attrs = maildir:~/Maildir
user_attrs = =home=/var/mail/vmail/%u

tls = no
scope = subtree
deref = never
