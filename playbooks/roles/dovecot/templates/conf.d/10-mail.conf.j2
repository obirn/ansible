# Mailbox locations and namespaces
mail_location = {{ mail_location }}
mail_home = /var/mail/vmail/%u
mail_privileged_group = {{ mail_privileged_group }}


# Namespace configuration
namespace inbox {
  inbox = yes
  
  mailbox Drafts {
    auto = subscribe
    special_use = \Drafts
  }
  
  mailbox Sent {
    auto = subscribe
    special_use = \Sent
  }
  
  mailbox Junk {
    auto = subscribe
    special_use = \Junk
  }
  
  mailbox Trash {
    auto = subscribe
    special_use = \Trash
  }
}