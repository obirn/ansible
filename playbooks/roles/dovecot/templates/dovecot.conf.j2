## Dovecot configuration file

# Enable installed protocols
protocols = imap lmtp
listen = 127.0.0.1

auth_mechanisms = plain login

passdb {
  driver = ldap
  args = /etc/dovecot/dovecot-ldap.conf
}

# Logging
log_path = /var/log/dovecot.log
info_log_path = /var/log/dovecot-info.log

# Include config files
!include conf.d/*.conf